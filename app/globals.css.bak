@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600;700;800&family=Inter:wght@300;400;600&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Theme variables & layout */
:root{
  --bg-1: #05050a;
  --bg-2: #0b0b11;
  --muted: #9aa3ad;
  --accent-a: #6ee7d7;
  --accent-b: #c084fc;
  --card-glass: rgba(255,255,255,0.03);
  --card-border: rgba(255,255,255,0.06);
}

/* base */
html,body,#__next { height:100%; }
body{
  margin:0;
  font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, Arial; font-weight:400;
  background: linear-gradient(180deg,var(--bg-1) 0%, var(--bg-2) 100%);
  color:#e6edf3;
  -webkit-font-smoothing:antialiased;
}

/* hero area */
.hero-outer {
  min-height:72vh;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  padding:4rem 1rem;
  overflow:visible;
}

/* hero background image (center, low opacity) */
.hero-bg {
  position:absolute;
  inset:0;
  background-image: url('/hero.webp');
  background-size:cover;
  background-position:center;
  opacity:0.08;
  filter:brightness(0.22);
  pointer-events:none;
  z-index:0;
}

/* tiled grid but also faint squares like the reference */
.hero-grid::before {
  content:"";
  position:absolute;
  inset:0;
  background-image:
    radial-gradient(rgba(255,255,255,0.005) 1px, transparent 1px),
    linear-gradient(rgba(255,255,255,0.01) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255,255,255,0.01) 1px, transparent 1px);
  background-size: 220px 220px, 72px 72px, 72px 72px;
  opacity:0.45;
  mix-blend-mode: overlay;
  pointer-events:none;
  z-index:0;
}

/* title */
.hero-title {
  font-family: 'Poppins', 'Inter', sans-serif;
  font-weight:800;
  line-height:1.02;
  letter-spacing:-0.02em;
  text-align:center;
  margin:0 auto;
  max-width:980px;
  z-index:2;
}
.hero-title .display {
  display:block;
  font-size:clamp(34px, 8vw, 72px);
}

/* gradient highlight word */
.hero-title .gradient {
  background: linear-gradient(90deg, var(--accent-a), var(--accent-b));
  -webkit-background-clip:text;
  background-clip:text;
  color:transparent;
}

/* subtitle */
.hero-sub { color:var(--muted); margin-top:0.75rem; z-index:2; text-align:center; }

/* search composer */
.search-wrapper { margin-top:2rem; z-index:2; display:flex; justify-content:center; }
.search-pill {
  width:min(1100px, 92%);
  height:64px;
  border-radius:999px;
  display:flex;
  align-items:center;
  padding:0 12px;
  background: linear-gradient(180deg, rgba(255,255,255,0.015), rgba(255,255,255,0.01));
  border:1px solid rgba(255,255,255,0.03);
  box-shadow: 0 18px 40px rgba(2,4,8,0.65), inset 0 1px 0 rgba(255,255,255,0.02);
}

/* left badge */
.search-badge{
  width:42px; height:42px; border-radius:999px;
  display:flex; align-items:center; justify-content:center;
  margin-right:14px;
  background: linear-gradient(90deg, var(--accent-a), var(--accent-b));
  color:#041414; font-weight:700;
  box-shadow: 0 10px 30px rgba(110,231,215,0.06);
  flex: 0 0 48px;
}

/* input */
.search-input {
  background:transparent; border:0; outline:none; color: #e9eef3;
  font-size:1.05rem; flex:1; height:44px;
}

/* right CTA */
.search-cta {
  min-width:92px; height:40px; border-radius:999px; padding:0 14px;
  margin-left:14px; border:0; cursor:pointer;
  background: linear-gradient(90deg,var(--accent-a),var(--accent-b));
  color:#041414; font-weight:700;
}

/* quick chips under search */
.quick-chips{ display:flex; gap:10px; justify-content:center; margin-top:10px; z-index:2; }
.chip { background: rgba(255,255,255,0.03); color:var(--muted); padding:6px 10px; border-radius:8px; font-size:0.9rem; border:1px solid rgba(255,255,255,0.02); }

/* chat mock */
.chat-mock {
  margin-top:2.5rem;
  max-width:920px;
  width:calc(100% - 4rem);
  margin-left:auto; margin-right:auto;
  border-radius:20px;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border: 1px solid var(--card-border);
  box-shadow: 0 22px 48px rgba(0,0,0,0.55);
  padding:16px;
  position:relative;
  z-index:1;
  backdrop-filter: blur(8px) saturate(120%);
}

/* internal layout: left column (avatars) + vertical divider + right messages */
.chat-row { display:flex; gap:16px; align-items:flex-start; width:100%; }
.avatar-col { width:56px; display:flex; flex-direction:column; gap:18px; align-items:center; padding-top:12px; }
.avatar-dot {
  width:42px; height:42px; border-radius:999px; display:flex; align-items:center; justify-content:center;
  background: linear-gradient(90deg,var(--accent-a),var(--accent-b));
  box-shadow: 0 8px 32px rgba(110,231,215,0.06);
}

/* message column */
/* subtle vertical divider for chat mock */ 
.chat-mock::after { content: ""; position: absolute; left: calc(50% - 14px); top: 22px; bottom: 86px; width:1px; background: linear-gradient(180deg, rgba(255,255,255,0.02), transparent); border-left: 1px solid rgba(255,255,255,0.02); border-right: 1px solid rgba(0,0,0,0.06); pointer-events:none; border-radius:1px; }
.messages-col { flex:1; }

/* message bubble */
.msg {
  display:inline-block; padding:10px 12px; border-radius:12px; max-width:72%; font-size:0.95rem;
  margin-bottom:8px;
}
.msg.assistant { background: rgba(15,15,18,0.78); color:#e6edf3; border:1px solid rgba(255,255,255,0.02); }
.msg.user { background: linear-gradient(90deg,var(--accent-a),var(--accent-b)); color:#041414; margin-left:auto; }

/* vertical dotted line and floating right dots */
.floating-dots {
  position:absolute; right:26px; top:36%;
  display:flex; flex-direction:column; gap:22px; align-items:center;
}
.floating-dots::before{
  content:""; width:1px; height:240px; border-right:1px dotted rgba(255,255,255,0.03); transform:translateX(-6px);
}
.float-dot {
  width:46px; height:46px; border-radius:999px; border:1px solid rgba(255,255,255,0.04); background:transparent;
  box-shadow: 0 6px 18px rgba(0,0,0,0.5);
}
.float-dot.accent1{ box-shadow:0 0 18px rgba(110,231,215,0.10); }
.float-dot.accent2{ box-shadow:0 0 18px rgba(144,93,240,0.06); }

/* bottom input mock */
.chat-input {
  margin-top:18px;
  display:flex; gap:12px; align-items:center;
  background: rgba(0,0,0,0.25); border-radius:999px; padding:12px;
  border:1px solid rgba(255,255,255,0.02);
}
.chat-input input { flex:1; border:0; background:transparent; outline:none; color:#dfeaf0; padding:6px; }

/* responsive adjustments */
@media (min-width:1024px){
  .hero-title .display { display:block; font-size:clamp(32px, 6.5vw, 64px); line-height:1.02; }
  .search-pill { height:72px; }
  .search-input { height:56px; font-size:1.12rem; }
  .search-badge { width:64px; height:64px; margin-right:18px; }
}
